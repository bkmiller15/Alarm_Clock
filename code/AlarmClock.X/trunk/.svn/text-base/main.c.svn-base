//Configuration Bits:
#pragma config WDT = OFF
#pragma config MCLRE = OFF
#pragma config DEBUG = ON
#pragma config LVP = OFF
#pragma config FOSC = ECIO_EC


#include "main.h"
#include <stdio.h> 
#include <p18cxxx.h>
#define BOOTTEXTTIME 10


/* main
 * Main function for alarm clock project
 */ 
void main()
{
	// Initialize
	PIC_init();
	SPI_init( 0x02, 0x11, 0x00 );
	LCD_init();
   LCD_set_backlight(500);
	LCD_set_constrast(5);
	BlueLEDs_set_value(50);

	// LCD Screen is functional
	Boot_Mesg(1);
	Delay10KTCYx(BOOTTEXTTIME);
	Boot_Mesg(2);
	Delay10KTCYx(BOOTTEXTTIME);
	Boot_Mesg(3);
	Delay10KTCYx(BOOTTEXTTIME);

	// Setup Timers
	timer0_init();
	Boot_Mesg(4);
	Delay10KTCYx(BOOTTEXTTIME);

	// Setup A/D
	AD_init();
	Boot_Mesg(5);
	Delay10KTCYx(BOOTTEXTTIME);

	// Setup Database 
	DB_init();
	Boot_Mesg(6);
	Delay10KTCYx(BOOTTEXTTIME);




	while(1){
		Screen_paint();
		Delay10KTCYx(1000);

	}

}	
